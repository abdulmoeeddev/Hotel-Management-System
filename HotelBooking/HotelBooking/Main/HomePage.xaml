<UserControl x:Class="HotelBooking.Main.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:HotelBooking.Main"
             mc:Ignorable="d" 
             d:DesignHeight="360" d:DesignWidth="800"
             Background="White" Loaded="UserControl_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="3*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Column="3" Grid.ColumnSpan="4">
            <TextBlock Text="A Place where you find your comfort"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="20">
                
            </TextBlock>
        </Grid>
        <!--Start-->
        <Image Name="img1" 
            Grid.Row="2" Grid.Column="1"
               Stretch="UniformToFill"  />
        <TextBlock Grid.Row="3" Grid.Column="1"
                   Name="lblType"
                   Text="Room Type"
                   FontSize="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center">
        </TextBlock>

        <TextBlock Grid.Row="4" Grid.Column="1"
           Name="lblPrice"
           Text="Price"
           FontSize="20"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">
        </TextBlock>

        <TextBlock Grid.Row="2" Grid.Column="3"
           Name="lblDescription"
           Text="All Description Related to Room Goes Here
                   Whatever the length is all description wrapped
                   here."
                   TextAlignment="Justify"
           TextWrapping="Wrap"
           FontSize="10"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">
        </TextBlock>

        <TextBlock Grid.Row="3" Grid.Column="3"
               Name="lblf1"
               Text="Facility01"
               FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
        </TextBlock>

        <TextBlock Grid.Row="4" Grid.Column="3"
               Name="lblf1_1"
               Text="Facility02"
               FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
        </TextBlock>
        <!--End-->


        <Image Name="img2" 
            Grid.Row="2" Grid.Column="5"
               Stretch="UniformToFill" />
        <TextBlock Grid.Row="3" Grid.Column="5"
           Name="lblType2"
           Text="Room Type"
           FontSize="20"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">
        </TextBlock>

        <TextBlock Grid.Row="4" Grid.Column="5"
           Name="lblPrice2"
           Text="Price"
           FontSize="20"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">
        </TextBlock>

        <TextBlock Grid.Row="2" Grid.Column="7"
           Name="lblDescription2"
           Text="All Description Related to Room Goes Here
                   Whatever the length is all description wrapped
                   here."
                   TextAlignment="Justify"
           TextWrapping="Wrap"
           FontSize="10"
           VerticalAlignment="Center"
           HorizontalAlignment="Center">
        </TextBlock>

        <TextBlock Grid.Row="3" Grid.Column="7"
               Name="lblf2"
               Text="Facility01"
               FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
        </TextBlock>

        <TextBlock Grid.Row="4" Grid.Column="7"
               Name="lblf2_2"
               Text="Facility02"
               FontSize="20"
               VerticalAlignment="Center"
               HorizontalAlignment="Center">
        </TextBlock>

        <Button Name="btnReserve_0"
            Grid.Row="6"
            Grid.Column="3"
            Background="#FF6D0000"
            Content="Reserve"
            Foreground="White"
            FontSize="15" Click="btnReserve_0_Click"
        
            >

        </Button>
        <Button Name="btnReserve_1"
            Grid.Row="6"
            Grid.Column="7"
            Background="#FF6D0000"
            Content="Reserve"
            Foreground="White"
            FontSize="15" Click="btnReserve_1_Click" 
            >
        </Button>

        <Grid Grid.Column="7"
              Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <Button Name="btnleft"
                    Foreground="White"
                    FontSize="15" Click="btnleft_Click"
                    BorderBrush="Beige"
                    BorderThickness="4"
                    >
                <Button.Background>
                    <ImageBrush ImageSource="/Main/icons8-back-button-96 (1).png" Stretch="Uniform" TileMode="None"/>
                </Button.Background>

            </Button>
            <Button Name="btnright"
                    Grid.Column="1"
                    Foreground="White"
                    BorderBrush="Beige"
                    BorderThickness="4"
                    FontSize="15" Click="btnright_Click"
                    >
                <Button.Background>
                    <ImageBrush ImageSource="/Main/icons8-forward-button-96.png" Stretch="Uniform"/>
                </Button.Background>
            </Button>



        </Grid>
    </Grid>
</UserControl>
